{% extends 'base.html.twig' %}

{% block title %}Notas!{% endblock %}

{% block body %}
    <main class="app-content">
        <div class="app-title text-center">
           {%  if notas %}
            <h3>Alumno: {{ notas[0].alumno.nombre}} {{ notas[0].alumno.apellidos}}</h3>
            {% endif %}
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="tile-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Notas</th>
                                    <th>Nota media</th>
                                    <th>Ver Asignaturas</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for nota in notas %}
                                    {% if nota.nota >= 5 %}
                                        <tr>
                                        <td>{{nota.alumno.id}}</td>
                                        <td>{{nota.nota}}</td>
                                        <td></td>
                                        <td>
                                            <a href={{path('verAsignatura', {'id':nota.asignatura.id})}} class="btn btn-outline-info btn-sm "  title="Ver"><i class="fas fa-eye"></i></a>
                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
