{% extends 'base.html.twig' %}

{% block title %}Hello Alumnos!{% endblock %}

{% block body %}
    <main class="app-content">
        <div class="app-title text-center">
            <h1>Alumnos</h1>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="tile-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre y Apellido</th>
                                    <th>Ver Notas</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for alumno in alumnos %}
                                    <tr>
                                        <td>{{alumno.id}}</td>
                                        <td>{{alumno.nombre}} {{alumno.apellidos}}</td>
                                        <td>
                                            <a href={{path('verNotas', {'id':alumno.id})}} class="btn btn-outline-success btn-sm "  title="Ver"><i class="fas fa-eye"></i></a>
                                            {#                                            <a  href={{path('editarPuja', {'id':puja.id})}} class="btn btn-outline-success btn-sm "  title="Editar"><i class="fas fa-pencil-alt"></i></a>#}
                                            {#                                            <a  href={{path('borrarPuja', {'id':puja.id})}} class="btn btn-outline-danger btn-sm "  title="Eliminar"><i class="fas fa-trash-alt"></i></a>#}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
